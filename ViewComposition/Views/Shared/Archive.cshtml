@using System.Linq
@model ViewComposition.Models.ArchiveViewModel

@foreach (var year in Model.MonthStatistics.OrderBy(m => m.MonthAndYear).GroupBy(m => m.MonthAndYear.Year)) {
    <h3>@year.Key</h3>
    <ul>
    @foreach (var month in year) {
    <li><a href='@Model.BasePath/@month.MonthAndYear.ToString("yyyy\\/MM")'>@month.MonthAndYear.ToString("MMMM")</a> - @month.NumberOfDocuments</li>
    }
    </ul>
}